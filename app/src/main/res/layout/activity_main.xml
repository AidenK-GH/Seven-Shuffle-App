<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/Background_Garden"
    >
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="@color/Background_Garden"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="0dp">
            <Button
                android:id="@+id/new_game_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/Buttons_Garden"
                android:text="New Game"
                android:textSize="18sp"
                />
            <Button
                android:id="@+id/solve_end_game_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/Buttons_Garden"
                android:text="Solve"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/timer_textview"
                android:text="00:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:textColor="@color/Primary_Text_Garden"
                android:background="@color/Accent_Garden"
                />

            <Button
                android:id="@+id/settings_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/Buttons_Garden"
                android:gravity="center"
                android:drawableTop ="@drawable/round_build_24"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/letters_textview"
            android:text=" T E X T E D I T"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="@color/Primary_Text_Garden"
            android:background="@color/Accent_Garden"
            />

        <TextView
            android:id="@+id/userInput_Buttons_textview"
            android:text=" B U T T O N S"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textColor="@color/Primary_Text_Garden"
            android:background="@color/Accent_Garden"
            />

        <EditText
            android:id="@+id/userInput_EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/input_text_view_back"
            android:digits=""
            android:hint="Enter text here"
            android:maxLength="7"
            android:textSize="50sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <Button
            android:id="@+id/check_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/Buttons_Garden"
            android:text="Check"
            android:textSize="18sp"
            />
        <Button
            android:id="@+id/shuffle_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/Buttons_Garden"
            android:text="Shuffle"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/checkInput_textview"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:background="@color/Accent_Garden"
            android:textColor="@color/Primary_Text_Garden"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/input_type_2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- First row: 4 buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/input_1_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/Buttons_Garden"
                android:text="X"
                android:textSize="18sp"
                />
            <Button
                android:id="@+id/input_2_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/Buttons_Garden"
                android:text="X"
                android:textSize="18sp"
                />
            <Button
                android:id="@+id/input_3_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/Buttons_Garden"
                android:text="X"
                android:textSize="18sp"
                />

        </LinearLayout>

        <!-- Second row: 3 buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/input_4_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/Buttons_Garden"
                android:text="X"
                android:textSize="18sp"
                />
            <Button
                android:id="@+id/input_5_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/Buttons_Garden"
                android:text="X"
                android:textSize="18sp"
                />
            <Button
                android:id="@+id/input_6_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/Buttons_Garden"
                android:text="X"
                android:textSize="18sp"
                />

        </LinearLayout>
        <!-- 3 row: 1 button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/input_7_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/Buttons_Garden"
                android:text="X"
                android:textSize="18sp"
                />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
        android:id="@+id/answers_textview"
        android:text="Answers:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
            android:textColor="@color/Primary_Text_Garden"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp">
                <TextView
                    android:id="@+id/answers_temp_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="CLICK 'NEW GAME' BUTTON TO START"
                    android:textSize="18sp"
                    android:background="@color/Accent_Garden"
                    android:textColor="@color/Primary_Text_Garden"
                    android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/help_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/Buttons_Garden"
                android:text="Help"
                android:textSize="18sp"
                />
            <Button
                android:id="@+id/game_history_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/Buttons_Garden"
                android:text="Past Games"
                android:textSize="18sp"
                />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
    </ScrollView>