<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/temp1"
    >
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:background="@color/temp1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="0dp">
                <Button
                    android:id="@+id/new_game_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/small_btn"
                    android:text="New Game"
                    android:textSize="18sp"
                    />
                <Button
                    android:id="@+id/solve_end_game_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/small_btn"
                    android:text="Solve"
                    android:textSize="18sp"
                    />
                <Button
                    android:id="@+id/help_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/small_btn"
                    android:text="Help"
                    android:textSize="18sp"
                    />
                <Button
                    android:id="@+id/game_history_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/small_btn"
                    android:text="Past Games"
                    android:textSize="18sp"
                    />
                <TextView
                    android:id="@+id/timer_textview"
                    android:text="00:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_margin="5dp"
                    android:background="@drawable/text_view_non_input_back"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <TextView
                android:id="@+id/letters_textview"
                android:text=" A B C D E F G"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="50sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/text_view_non_input_back"
                />
            <EditText
                android:id="@+id/userInput_EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Enter text here"
                android:maxLength="7"
                android:digits=""
                android:textSize="50sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:background="@drawable/input_text_view_back"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">
            <Button
                android:id="@+id/check_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/small_btn"
                android:text="Check"
                android:textSize="18sp"
                />
            <Button
                android:id="@+id/shuffle_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/small_btn"
                android:text="Shuffle"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/checkInput_textview"
                android:text="CLICK 'NEW GAME' BUTTON TO START"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                />
        </LinearLayout>
        <com.example.anagramarama_app.MyKeyboard
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/answers_textview"
                android:text="Answers:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_margin="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp">
                <TextView
                    android:id="@+id/answers_temp_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="CLICK 'NEW GAME' BUTTON TO START"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <TextView
                android:id="@+id/place_holder_for_scroll_textview"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_margin="5dp"
                android:text=""
                android:textSize="18sp"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>